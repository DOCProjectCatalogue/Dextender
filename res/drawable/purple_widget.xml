<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

     <!-- ==========================================================
     Author: Mike LiVolsi
     NOTE  : The mipmap sub-directory does not come with Android Studio
             and had to be manually created.
     Called by /layout/widget.xml, this presents a nice square with gradient
     ============================================================ -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFFFF" />

    <gradient
        android:angle="270"
        android:endColor="#200040"
        android:startColor="#660099" />

    <corners
        android:bottomLeftRadius="7dp"
        android:bottomRightRadius="7dp"
        android:topLeftRadius="7dp"
        android:topRightRadius="7dp" />

</shape> 